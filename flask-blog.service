[Unit]
Description=Flask Application
[Service]
User=pythonadm
WorkingDirectory=/opt/flask-app
ExecStart=/bin/bash \
    -c 'cd /opt/flask-app && \
    . ./venv/bin/activate && \
    python3 ./app.py'
Environment=SECRET_KEY={{SECRET_KEY}}
Environment=DATABASE_URI={{DATABASE_URI}}
[Install]
WantedBy=multi-user.target